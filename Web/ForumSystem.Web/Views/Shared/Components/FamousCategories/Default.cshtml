@using ForumSystem.Web.ViewModels.Components;
@model FamousCategoriesListModel

<div class="ibox-content forum-container mb-3">

    <div class="forum-title text-center">
        <h5>Famous Categories</h5>
    </div>

    @foreach (var category in this.Model.Categories)
    {
        <div class="forum-item active">
            <div class="row my-row ">
                <a href="@category.Url" class="text-dark">
                    <div class="col-md-12 my-col">
                        <img src="@category.ImageUrl" width="30" class="ui-w-40 rounded-circle center-block" />
                        <span>@category.Name</span>
                    </div>
                </a>
            </div>
        </div>
    }

    <a asp-area="" asp-controller="Categories" asp-action="All" asp-route-id="1" class="btn btn-block btn-primary">View All Categories</a>
</div>

<div class="ibox-content forum-container mb-3">
    <div class="forum-title text-center">
        <span>Have an idea for category? Start a community:</span>
    </div>

    <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-primary btn-block">Create Category</a>
</div>