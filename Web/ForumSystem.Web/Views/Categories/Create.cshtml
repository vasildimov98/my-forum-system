@using ForumSystem.Web.ViewModels.Categories;
@model CategoryInputModel
@{
    this.ViewData["Title"] = "Create Category";
}

<h1>@this.ViewData["Title"]</h1>

<form asp-area="" asp-controller="Categories" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (this.TempData.ContainsKey(InvalidMessageKey))
    {
        <div class="text-danger">
            @this.TempData[InvalidMessageKey]
        </div>
    }

    <div class="form-check">
        <label asp-for="Name"></label>
        <textarea asp-for="Name" onkeyup="textCounter(this,'counter',40);" class="form-control authoresize-area"></textarea>
        <div id="counter" class="words-written">
            0/40
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />

    <div class="form-check">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control mytinymcetextarea"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr />

    <div class="form-check">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-check float-md-right">
        <input type="submit" value="Submit" class="btn btn-success my-post-btn" />
    </div>
</form>

@section Scripts {
    <script src="~/js/text-counter.js" asp-append-version="true"></script>
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/js/init-tiny-mce.js" type="text/javascript"></script>
}