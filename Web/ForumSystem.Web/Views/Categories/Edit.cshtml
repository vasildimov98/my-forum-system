@using ForumSystem.Web.ViewModels.Categories;

@model CategoryEditModel
@{
    this.ViewData["Title"] = "Edit Category";
}

<h1>@this.ViewData["Title"]</h1>

<form asp-area="" asp-action="Edit" asp-route-id="@this.Model.Id" method="post">
    <input type="hidden" asp-for="FromPage" />
    <input type="hidden" asp-for="IsFromAdminPanel" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-check">
        <label asp-for="Name"></label>
        <textarea asp-for="Name" placeholder="@this.Model.Name" class="form-control authoresize-area"></textarea>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-check">
        <label asp-for="SanitizeDescription"></label>
        <textarea asp-for="SanitizeDescription" name="Description" class="form-control mytinymcetextarea"></textarea>
        <span asp-validation-for="SanitizeDescription" class="text-danger"></span>
    </div>

    <div class="form-check">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" placeholder="@this.Model.ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-check float-md-right">
        <input type="submit" value="Edit" class="btn btn-success my-post-btn" /> |
        <a asp-controller="Categories" asp-action="ByName" asp-route-name="@this.Model.Name" asp-route-id="1" class="btn btn-secondary">Go to Category</a>
    </div>
</form>

@section Scripts {
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/js/init-tiny-mce.js" type="text/javascript"></script>
}