@model ForumSystem.Web.ViewModels.Posts.PostInputModel

@{
    this.ViewData["Title"] = "Create a post";
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ],
    });
</script>

<form asp-action="Create" method="post" id="myform">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" onkeyup="textCounter(this,'counter',100);" id="message" class="form-control" maxlength="300" />
        <div id="counter" class="words-written">
            0/100
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <hr />
    <input type="submit" class="btn btn-primary" value="Submit" onclick="ValidateTinyMCE"/>
</form>

@section Scripts {
    <script>
        function textCounter(field, field2, maxlimit) {
            var countfield = document.getElementById(field2);
            if (field.value.length > maxlimit) {
                field.value = field.value.substring(0, maxlimit);
                return false;
            } else {
                countfield.innerHTML = field.value.length + "/100"
            }
        }
    </script>

    <script type="text/javascript">
        $.validator.setDefaults({ ignore: "" });
    </script>
}
