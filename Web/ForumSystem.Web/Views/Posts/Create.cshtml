@model ForumSystem.Web.ViewModels.Posts.PostInputModel

@{
    this.ViewData["Title"] = "Create a post";

    var categories = this.Model.Categories
        .Select(x => new SelectListItem(x.Name, x.Id.ToString()))
        .ToList();


    if (this.Model.Selected != null)
    {
        for (int i = 0; i < categories.Count; i++)
        {
            var category = categories[i];

            category.Selected = false;

            if (category.Text == this.Model.Selected)
            {
                var temp = categories[0];
                categories[0] = category;
                categories[i] = temp;
             }
        }
    }
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        resize: false,
        plugins: [
            "image paste table link code media"
        ],
    });
</script>

<form asp-action="Create" method="post" id="myform">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" onkeyup="textCounter(this,'counter',300);" id="message" class="form-control" maxlength="300" />
        <div id="counter" class="words-written">
            0/300
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <hr />
    <input type="submit" class="btn btn-primary float-md-right" value="Submit" onclick="ValidateTinyMCE" />
</form>

@section Scripts {
    <script src="~/js/post.js" asp-append-version="true"></script>
}
