@model ForumSystem.Web.ViewModels.Posts.PostViewModel

@{
    var comment = this.Model.Comments.FirstOrDefault();

    var totalDays = (int)(DateTime.UtcNow - this.Model.CreatedOn).TotalDays;

    var createdDaysAgo = totalDays == 0 ?
        (int)(DateTime.UtcNow - this.Model.CreatedOn).TotalHours + " hours ago" :
        totalDays + " days ago";

    this.ViewData["Title"] = $"{this.Model.Title}";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ],
    });
</script>

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <div class="px-4 pt-3">
                            <form method="post" id="xssForm"></form>
                            <div>
                                <a href="#" onclick="sendVote(@this.Model.Id, true)">
                                    <i class="fa fa-arrow-up"></i>
                                </a>
                            </div>

                            <div id="votesCount">@this.Model.VoteTypeCount</div>

                            <div>
                                <a href="#" onclick="sendVote(@this.Model.Id, false)">
                                    <i class="fa fa-arrow-down"></i>
                                </a>
                            </div>
                        </div>

                        <img src="@this.Model.CategoryImage" width="100" class="d-sm-block ui-w-40 rounded-circle">

                        <div class="media-body ml-3">
                            <h3>@this.Model.Title</h3>
                            <p href="javascript:void(0)" data-abc="true">Created by @this.Model.UserUserName</p>
                            <div class="text-muted small">@createdDaysAgo</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div>Member since <strong>@this.Model.UserCreatedOn.Date.ToString("d")</strong></div>
                            <div class="float-sm-right"><strong>@this.Model.UserPostsCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Raw(this.Model.SanitizeContent)
                </div>
                <div class="card-footer align-items-md-start px-0 pt-0 pb-3">
                    <div class="align-text-top">
                        <span>Write a comment @this.Model.UserUserName</span>
                    </div>

                    <form asp-controller="Comments" asp-action="Create" method="post">
                        <input type="hidden" name="PostId" value="@this.Model.Id" />
                        <input type="hidden" name="ParentId" value="0" />
                        <div class="form-group">
                            <label for="Content"></label>
                            <textarea name="Content" class="form-control"></textarea>
                        </div>

                        <div class="float-right">
                            <input type="submit" class="btn btn-primary" value="Comment" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="https://thispersondoesnotexist.com/image" width="20" class="d-sm-block ui-w-40 rounded-circle">

                        <div class="media-body ml-3">
                            <h6>@this.Model.UserUserName</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Raw(comment.SanitizeContent)
                </div>
                <div class="card-footer">
                    <div class="container my-container">
                        <div class="row justify-content-between">
                            <div class="col-md-3 align-items-center">
                                <i class="fa fa-arrow-up"></i>
                                0
                                <i class="fa fa-arrow-down"></i>
                            </div>
                            <div class="col-md-3 text-right">
                                <button onclick="chageCommentBox(@comment.FormCommentId)"class="btn btn-primary">
                                    <i class="fa fa-comment-dots"></i>
                                    Reply
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <form id=@comment.FormCommentId asp-controller="Comments" asp-action="Create" method="post" style="display: none">
                                    <input type="hidden" name="PostId" value="@this.Model.Id" />
                                    <input type="hidden" name="ParentId" value="0" />
                                    <div class="form-group">
                                        <label for="Content"></label>
                                        <textarea name="Content" class="form-control"></textarea>
                                    </div>

                                    <div class="float-right">
                                        <input type="submit" class="btn btn-primary" value="Comment" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/post.js"></script>
}