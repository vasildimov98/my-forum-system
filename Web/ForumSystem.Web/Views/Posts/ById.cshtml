@using ForumSystem.Web.ViewModels.Comments;
@model ForumSystem.Web.ViewModels.Posts.PostViewModel;

@{
    this.ViewData["Title"] = "Post";

    var totalDays = (int)(DateTime.UtcNow - this.Model.CreatedOn).TotalDays;

    var createdDaysAgo = totalDays == 0 ?
        (int)(DateTime.UtcNow - this.Model.CreatedOn).TotalHours + " hours ago" :
        totalDays + " days ago";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ],
    });
</script>

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <div class="px-4 pt-3">
                            <form method="post" id="xssForm"></form>
                            <div>
                                <a href="javascript:;" onclick="sendVote(@this.Model.Id, true, '/api/votes')">
                                    <i class="fa fa-arrow-up"></i>
                                </a>
                            </div>

                            <div id=@this.Model.VotesCountId>@this.Model.VoteTypeCount</div>

                            <div>
                                <a href="javascript:;" onclick="sendVote(@this.Model.Id, false, '/api/votes')">
                                    <i class="fa fa-arrow-down"></i>
                                </a>
                            </div>
                        </div>

                        <img src="@this.Model.CategoryImageUrl" width="100" class="d-sm-block ui-w-40 rounded-circle">

                        <div class="media-body ml-3">
                            <h3>@this.Model.Title</h3>
                            <a asp-controller="Profiles" asp-action="All" data-abc="true">Created by @this.Model.UserUserName</a>
                            <div class="text-muted small">@createdDaysAgo</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div>Member since <strong>@this.Model.UserCreatedOn.Date.ToString("d")</strong></div>
                            <div class="float-sm-right"><strong>@this.Model.UserPostsCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Raw(this.Model.SanitizeContent)
                </div>
                <div class="card-footer align-items-md-start px-0 pt-0 pb-3">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div>
                                    <span>Write a comment as @this.Model.LoggedInUserName</span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <form asp-controller="Comments" asp-action="Create" method="post">
                                    <partial name="_AddCommentInputs" model="new CommentInputModel { PostId = this.Model.Id }" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ShowComments" model="this.Model.Comments" />

@section Scripts {
    <script src="/js/post.js"></script>
    <script src="~/js/vote.js"></script>
}