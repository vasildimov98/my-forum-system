@using ForumSystem.Web.ViewModels.Administration.Posts;

@model PostEditModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h2 class="text-danger">Are you sure you want to delete this post?</h2>
<h2 class="text-danger">All post's comments will be deleted also!</h2>
<div>
    <h3>Title: @this.Model.Title</h3>
    <h3>Number of Comments: @this.Model.CommentsCount</h3>
    <span>Category: @this.Model.CategoryName</span>
    <hr />
    <dl class="row">
        <dt class="col-sm-5">
            <img src="@this.Model.CategoryImageUrl" width="340" />
        </dt>
        <dd class="col-sm-7">
            @Html.Raw(this.Model.Content)
        </dd>
    </dl>

    <form asp-action="Delete" class="float-md-right">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-area="" asp-controller="Posts" asp-action="ById" asp-route-id="@this.Model.Id" class="btn btn-secondary">Back to Post</a>
    </form>
</div>