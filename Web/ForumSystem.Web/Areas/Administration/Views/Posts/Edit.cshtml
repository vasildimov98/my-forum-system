@using ForumSystem.Web.ViewModels.Administration.Posts;
@model PostEditModel
 
@{
    this.ViewData["Title"] = "Edit Post";

    var categories = this.Model.Categories
        .Select(x => new SelectListItem(x.Name, x.Id.ToString()))
        .ToList();


    if (this.Model.Selected != null)
    {
        for (int i = 0; i < categories.Count; i++)
        {
            var category = categories[i];

            category.Selected = false;

            if (category.Text == this.Model.Selected)
            {
                var temp = categories[0];
                categories[0] = category;
                categories[i] = temp;
            }
        }
    }
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link media"
        ],
        resize: false,
    });
</script>

<form asp-area="Administration" asp-controller="Posts" asp-action="Edit" asp-route-id="@this.Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-check">
        <label asp-for="Title"></label>
        <input asp-for="Title" placeholder="@this.Model.Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-check">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" name="Content" value="@Html.Raw(this.Model.SanitizeContent)" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-check">
        <input id="myPostCommentBtn" type="submit" value="Edit" class="btn btn-success" /> |
        <a asp-area="Administration" asp-controller="Posts" asp-action="Index" class="btn btn-primary">Go Back</a>
    </div>
</form>

<script>
    $.validator.setDefaults({ ignore: "" });

    $('#myPostCommentBtn').click(function () {
        tinyMCE.triggerSave();
    });

</script>
