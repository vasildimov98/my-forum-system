@using ForumSystem.Web.ViewModels.Administration.Categories;
@model CategoryCrudModelList
@{
    var count = (this.Model.PaginationModel.CurrentPage - 1) * 5 + 1;
    this.ViewData["Title"] = "Admin Categories";
}

<section class="pb-5 header text-center">
    <div class="container">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="p-xs">
                <h1>@this.ViewData["Title"]</h1>
                <a class="btn btn-primary" asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-12 mx-auto">
                <div class="card border-0 shadow text-center">
                    <div class="card-body p-5">
                        <!-- Responsive table -->
                        <div class="table-responsive">
                            <table class="table m-0 text-nowrap">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in this.Model.Categories)
                                    {
                                        <tr>
                                            <th scope="row">@(count++)</th>
                                            <td>
                                                <img class="img-responsive pull-left" src="@category.ImageUrl" width="100" />
                                            </td>
                                            <td class="d-flex text-center justify-content-center">@category.Name</td>
                                            <td>
                                                <!-- Call to action buttons -->
                                                <ul class="list-inline m-0">
                                                    <li class="list-inline-item">
                                                        <a asp-area="" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a asp-area="" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <partial name="~/Views/PartialViews/_Pagination.cshtml" model="this.Model.PaginationModel" />
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
