@model ForumSystem.Web.ViewModels.Administration.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = "Edit Category";
}

<h1>@this.ViewData["Title"]</h1>

<form asp-action="Edit" asp-route-id="@this.Model.Id" method="post">
    <div class="form-check">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="@this.Model.Name" class="form-control"/>
    </div>

    <div class="form-check">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" placeholder="@this.Model.Description" class="form-control"></textarea>
    </div>

    <div class="form-check">
        <label asp-for="Image"></label>
        <input asp-for="Image" placeholder="@this.Model.Image" class="form-control" />
    </div>

    <hr />
    <div class="form-check">
        <input type="submit" value="Edit" class="btn btn-success" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>
