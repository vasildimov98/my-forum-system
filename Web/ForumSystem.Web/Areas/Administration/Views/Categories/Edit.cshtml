@model ForumSystem.Web.ViewModels.Administration.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = "Edit Category";
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link media"
        ],
    });
</script>

<form asp-area="Administration" asp-action="Edit" asp-route-id="@this.Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-check">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="@this.Model.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-check">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" name="Description" value="@Html.Raw(this.Model.SanitizeDescription)" class="form-control"></textarea>
        @*<span asp-validation-for="Description" class="text-danger"></span>*@
    </div>

    <div class="form-check">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" placeholder="@this.Model.ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-check">
        <input id="myPostCommentBtn" type="submit" value="Edit" class="btn btn-success" /> |
        <a asp-area="Administration" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>

<script>
    $.validator.setDefaults({ ignore: "" });

    $('#myPostCommentBtn').click(function () {
        tinyMCE.triggerSave();
    });

</script>
