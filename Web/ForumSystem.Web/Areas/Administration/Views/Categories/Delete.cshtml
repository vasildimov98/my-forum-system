@model ForumSystem.Web.ViewModels.Administration.Categories.CategoryEditModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h2 class="text-danger">Are you sure you want to delete this category?</h2>
<h2 class="text-danger">All category's posts will be deleted also with all theirs comments!</h2>
<div>
    <h3>Name of Category: @this.Model.Name</h3>
    <h3>Number of Posts: @this.Model.PostsCount</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-5">
            <img src="@this.Model.ImageUrl" width="340" />
        </dt>
        <dd class="col-sm-7">
            @Html.Raw(this.Model.SanitizeDescription)
        </dd>
    </dl>

    <form asp-action="Delete" class="float-md-right">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-area="Administration" asp-action="Index" asp-route-id="@this.Model.CurrentPage" class="btn btn-secondary">Back to List</a>
    </form>
</div>