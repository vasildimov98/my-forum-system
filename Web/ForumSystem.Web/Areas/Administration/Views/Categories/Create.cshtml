@model ForumSystem.Web.ViewModels.Administration.Categories.CategoryInputModel
@{
    this.ViewData["Title"] = "Create Category";
}

<h1>@this.ViewData["Title"]</h1>

<form asp-area="Administration" asp-controller="Categories" asp-action="Create" method="post">
    <div class="form-check">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-check">
        <label asp-for="Descriptions"></label>
        <textarea asp-for="Descriptions" class="form-control"></textarea>
    </div>

    <div class="form-check">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
    </div>

    <hr />
    <div class="form-check">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>