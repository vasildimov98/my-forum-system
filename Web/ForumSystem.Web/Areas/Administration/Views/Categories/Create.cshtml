@using ForumSystem.Web.ViewModels.Administration.Categories;
@model CategoryInputModel
@{
    this.ViewData["Title"] = "Create Category";
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link media"
        ],
        resize: false,
    });
</script>

<form asp-area="Administration" asp-controller="Categories" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (this.TempData.ContainsKey("InvalidMessage"))
    {
        <div class="text-danger">
            @this.TempData["InvalidMessage"]
        </div>
    }

    <div class="form-check">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />

    <div class="form-check">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr />

    <div class="form-check">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-check float-md-right">
        <input type="submit" value="Submit" class="btn btn-success my-post-btn" />
    </div>
</form>
